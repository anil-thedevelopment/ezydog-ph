{%- comment -%}
----------------------------------------------------------------------------------------------------------------------
SECTION HEADER
----------------------------------------------------------------------------------------------------------------------

This component renders a section header, which is a pattern in many sections of the theme.

********************************************
Supported variables
********************************************

* subheading: the subheading (if any)
* heading: the heading to show
* content: an optional content to show
* text_alignment: alignment of header's text (supports "start", "center" or "end") - default to being centered
{%- endcomment -%}

{% if subheading != blank or heading != blank or content != blank %}
  <div class="section-header  {% if template == 'index' %}{% else %}justify-self-{{ text_alignment | default: 'center' }}{% endif %} text-{{ text_alignment | default: 'left' }}">
    {%- if subheading != blank or heading != blank or content != blank -%}
      <div class="prose">
        {%- if subheading != blank -%}
          <p class="h6">{{- subheading -}}</p>
        {%- endif -%}

        {%- if heading != blank -%}
          {% if heading_tag != blank %}
            {% case heading_tag %}
              {% when "h1" %}
                <h1 class="dfs-30 mfs-30 BarlowSC {{ heading_class }}">{{ heading }}</h1>
              {% when "h2" %}
                <h2 class="dfs-30 mfs-30 BarlowSC {{ heading_class }}">{{ heading }}</h2>
              {% when "h3" %}
                <h3 class="dfs-30 mfs-30 BarlowSC {{ heading_class }}">{{ heading }}</h3>
              {% when "h4" %}
                <h4 class="dfs-30 mfs-30 BarlowSC {{ heading_class }}">{{ heading }}</h4>
              {% when "h5" %}
                <h5 class="dfs-30 mfs-30 BarlowSC {{ heading_class }}">{{ heading }}</h5>
              {% when "p" %}
                <p class="dfs-30 mfs-30 BarlowSC {{ heading_class }}">{{ heading }}</p>
            {% endcase %}
            
          {% else  %}
            {% if page.handle == "faq" %}
              <h1 class="dfs-30 mfs-30 BarlowSC {{ heading_class }} mfs-28 text-mb-sm">{{- heading -}}</h1>
            {% elsif page.handle == 'dog-beds' or page.handle == 'training-range' or page.handle == 'travel-range' %}
              <h2 class="dfs-30 mfs-30 BarlowSC {{ heading_class }} mfs-28 text-mb-sm">{{- heading -}}</h2>
            {% else %} 
              <p class="dfs-30 mfs-30 BarlowSC {{ heading_class }} mfs-28 text-mb-sm">{{- heading -}}</p>
            {% endif %}
          {% endif %}
        {%- endif -%}

        <span class="dfs-16 mfs-14">{{- content -}}</span>
      </div>
    {%- endif -%}
  </div>
{%- endif -%}
