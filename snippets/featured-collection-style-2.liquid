<!-- featured-collection-style-2 -->
<div class="{% if section.settings.separate_section_with_border %}bordered-section{% endif %} {% if section.settings.apply_bottom_padding %} section-pt {% endif %} {% if section.settings.apply_bottom_padding %} section-pb {% endif %}">
    <div class="section-x-padding-only v-stack justify-self-start gap-4 text-left sm:gap-5">
        <h2 class="BarlowSC dfs-30 {% if template == 'index' %}mfs-28{% else %}mfs-30{% endif %} text-mb-sm">{{ section.settings.title | default: section.settings.collection.title }}</h2>
    </div>

    <div class="section-x-padding-only collection-wrapper-{{section.id}}">
        {%- assign product_count = section.settings.collection.products.size -%}
        
        <!-- Desktop layout -->
        <div class="desktop-layout hidden sm:block">
            {% if product_count >= 6 %}
            <!-- Slider layout for 5+ products -->
            <div class="feat-col-carousel-{{ section.id }} carousel-container">
                {%- for product in section.settings.collection.products limit: section.settings.products_count -%}
                    <div class="product-card-wrapper-{{ section.id }}">
                        {%- render 'product-card', product: product, reveal: should_reveal, hide_product_information: section.settings.hide_product_information, block: block -%}
                    </div>
                {%- endfor -%}
            </div>
            <div class="carousel-arrows-{{ section.id }}">
                <div class="slider-controls">
                    <div class="progress-container">
                        <div class="progress-bar">
                            <div class="progress-fill"></div>
                        </div>
                        <span class="slide-counter">
                            <span class="arrow-left">‹</span> 
                            <span class="current-slide">1</span>/
                            <span class="total-slides">{{ product_count | divided_by: 5.0 | ceil }}</span> 
                            <span class="arrow-right">›</span>
                        </span>
                    </div>
                </div>
            </div>
            {% else %}
            <!-- Grid layout for 1-5 products -->
            <div class="product-grid-container">
                <div class="product-grid">
                    {%- for product in section.settings.collection.products limit: section.settings.products_count -%}
                        <div class="product-card-wrapper-{{ section.id }} grid-item">
                            {%- render 'product-card', product: product, reveal: should_reveal, hide_product_information: section.settings.hide_product_information, block: block -%}
                        </div>
                    {%- endfor -%}
                </div>
            </div>
            {% endif %}
        </div>
        
        <!-- Mobile layout -->
        <div class="mobile-layout sm:hidden">
            {% if product_count > 2 %}
            <!-- Slider layout for 3+ products -->
            <div class="feat-col-carousel-mobile-{{ section.id }} carousel-container">
                {%- for product in section.settings.collection.products limit: section.settings.products_count -%}
                    <div class="product-card-wrapper-{{ section.id }}">
                        {%- render 'product-card', product: product, reveal: should_reveal, hide_product_information: section.settings.hide_product_information, block: block -%}
                    </div>
                {%- endfor -%}
            </div>
            <div class="carousel-arrows-mobile-{{ section.id }}">
                <div class="slider-controls">
                    <div class="progress-container">
                        <div class="progress-bar">
                            <div class="progress-fill-mobile"></div>
                        </div>
                        <span class="slide-counter">
                            <span class="arrow-left-mobile">‹</span> 
                            <span class="current-slide-mobile">1</span>/
                            <span class="total-slides-mobile">{{ product_count | divided_by: 2 | ceil }}</span> 
                            <span class="arrow-right-mobile">›</span>
                        </span>
                    </div>
                </div>
            </div>
            {% else %}
            <!-- Grid layout for 1-2 products -->
            <div class="product-grid-container">
                <div class="product-grid-mobile">
                    {%- for product in section.settings.collection.products limit: section.settings.products_count -%}
                        <div class="product-card-wrapper-{{ section.id }} grid-item">
                            {%- render 'product-card', product: product, reveal: should_reveal, hide_product_information: section.settings.hide_product_information, block: block -%}
                        </div>
                    {%- endfor -%}
                </div>
            </div>
            {% endif %}
        </div>
    </div>

    {%- if section.settings.link_text != blank -%}
        {%- assign button_link = section.settings.link_url | default: section.settings.collection.url | default: '#' -%}
        <div class="d-flex justify-end section-x-spacing ">
            <a data-url="{{ section.settings.link_url | default: section.settings.collection.url }}" class="button button-{{ section.id }}">{{ section.settings.link_text }}</a>
        </div>
    {%- endif -%}
</div>

<style>
  /* Desktop styles */
  .button-{{ section.id }} { margin-top: 48px; }
  
  #product-list-{{ section.id }} {}
  .collection-detail-{{section.id}} { padding-right: 2em; }
  
  .product-card-wrapper-{{ section.id }} { 
      margin: 0 8px;
  }
  
  .product-grid-container {
      width: 100%;
      overflow: hidden;
  }
  
  .product-grid {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      gap: 15px;
      margin: 0 -8px;
  }
  
  .product-grid .grid-item {
      margin: 0 8px;
  }
  
  .product-card-wrapper-{{ section.id }} {
    background: #f8f8f8;
    min-height: 1px; /* 460px  495px;*/
    border-radius: 10px;
  }
  .product-card-wrapper-{{ section.id }} .product-card__info.empty\:hidden {
    padding: 0 5px;
    height: 200px;
  }
  @media screen and (max-width: 767px){
    .product-card-wrapper-{{ section.id }} .product-card__info.empty\:hidden {
        height: 220px;
    }
  }
  .feat-col-carousel-{{ section.id }} .product-card__info.empty\:hidden {
      padding: 0 5px;
      padding-bottom: 10px;
  }
  .product-card__info :is(.price-list,.rating-badge) {
      justify-content: left;
  }
  .view-prod-btn {
    padding-bottom: 10px;
  }
  
  /* Mobile-specific styles */
  .mobile-layout .product-grid-mobile {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
      margin: 0 -8px;
  }
  
  .mobile-layout .product-grid-mobile .grid-item {
      margin: 0 8px;
  }
  
  @media screen and (max-width: 640px) {
      .desktop-layout {
          display: none;
      }
      .mobile-layout {
          display: block;
      }
      
      .feat-col-carousel-mobile-{{ section.id }} .product-card-wrapper-{{ section.id }} {
          min-height: 400px;
          margin: 0 8px;
      }
      
      section#shopify-section-template--24707126395176__featured_collection_WaGrzM,
      section#shopify-section-template--24707126395176__featured_collection_XbUcB3 {
        margin-left: 8px;
      }
      
      .section-x-padding-only.v-stack.justify-self-start.gap-4.text-left.sm\:gap-5,
      .carousel-arrows-template--24707126395176__featured_collection_WaGrzM {
        padding-left: 8px !important;
      }
      .section-pb {
        padding-left: 8px;
      }
  }

  @media screen and (min-width: 641px) {
      .mobile-layout {
          display: none;
      }
      .desktop-layout {
          display: block;
      }
  }

  /* Slider controls styling */
  .feat-col-carousel-{{ section.id }},
  .feat-col-carousel-mobile-{{ section.id }} {
      position: relative;
      display: block;
  }
  
  .feat-col-carousel-{{ section.id }} > .slick-dots,
  .feat-col-carousel-mobile-{{ section.id }} > .slick-dots { 
      display: none !important; 
  }
  
  .carousel-arrows-{{ section.id }},
  .carousel-arrows-mobile-{{ section.id }} {
      margin-top: 24px;
  }
  
  .slider-controls {
      display: flex;
      justify-content: left; 
      gap: 8px;
  }
  
  .carousel-arrows-{{ section.id }} .progress-container,
  .carousel-arrows-mobile-{{ section.id }} .progress-container {
      display: ruby;
      align-items: center;
  }
  
  .carousel-arrows-{{ section.id }} .progress-bar,
  .carousel-arrows-mobile-{{ section.id }} .progress-bar {
      width: 120px !important;
      height: 10px !important;
      background: #e0e0e0 !important;
      border-radius: 10px;
      overflow: hidden;
  }
  
  .progress-fill,
  .progress-fill-mobile {
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 0;
      background: #000;
      transition: width 0.3s ease;
  }
  
  .slide-counter {
      font-size: 12px;
      color: #000;
      display: flex;
      align-items: center;
      gap: 0.5em;
  }
  .arrow-left,
  .arrow-right,
  .arrow-left-mobile,
  .arrow-right-mobile {
      cursor: pointer;
  }
  
  .arrow-left.disabled,
  .arrow-right.disabled,
  .arrow-left-mobile.disabled,
  .arrow-right-mobile.disabled {
      cursor: default;
      opacity: 0.5;
  }
  
  @media screen and (max-width: 640px) {
      .progress-bar {
          width: 80px;
      }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Initialize desktop slider
  {% if product_count >= 6 %}
    var $desktopCarousel = $('.feat-col-carousel-{{ section.id }}');
    $desktopCarousel.slick({
      dots: false,
      infinite: false,
      speed: 300,
      slidesToShow: 5,
      slidesToScroll: 5,
      adaptiveHeight: true,
      arrows: false,
      responsive: [
        { 
          breakpoint: 1400, 
          settings: { 
            slidesToShow: 5,
            slidesToScroll: 5 
          } 
        },
        { 
          breakpoint: 900, 
          settings: { 
            slidesToShow: 3,
            slidesToScroll: 3 
          } 
        },
        { 
          breakpoint: 640, 
          settings: { 
            slidesToShow: 2,
            slidesToScroll: 1 
          } 
        }
      ]
    });
    
    $desktopCarousel.on('init afterChange', function(event, slick) {
      var currentSlidesToShow = slick.options.slidesToShow;
      var totalSlides = Math.ceil({{ product_count }} / currentSlidesToShow);
      var currentSlideGroup = Math.floor(slick.currentSlide / currentSlidesToShow) + 1;
      
      $('.carousel-arrows-{{ section.id }} .current-slide').text(currentSlideGroup);
      $('.carousel-arrows-{{ section.id }} .total-slides').text(totalSlides);
      $('.carousel-arrows-{{ section.id }} .progress-fill').css('width', (currentSlideGroup / totalSlides) * 100 + '%');
      
      // Update desktop arrow states
      $('.carousel-arrows-{{ section.id }} .arrow-left').toggleClass('disabled', slick.currentSlide === 0);
      $('.carousel-arrows-{{ section.id }} .arrow-right').toggleClass('disabled', slick.currentSlide >= {{ product_count }} - currentSlidesToShow);
    });
    
    $('.carousel-arrows-{{ section.id }} .arrow-left').off('click').on('click', function(e) {
      e.preventDefault();
      if (!$(this).hasClass('disabled')) {
        $desktopCarousel.slick('slickPrev');
      }
    });
    
    $('.carousel-arrows-{{ section.id }} .arrow-right').off('click').on('click', function(e) {
      e.preventDefault();
      if (!$(this).hasClass('disabled')) {
        $desktopCarousel.slick('slickNext');
      }
    });
    
    $desktopCarousel.slick('slickGoTo', 0);
  {% endif %}

  // Initialize mobile slider
  {% if product_count > 2 %}
    var $mobileCarousel = $('.feat-col-carousel-mobile-{{ section.id }}');
    $mobileCarousel.slick({
      dots: false,
      infinite: false,
      speed: 300,
      slidesToShow: 2,
      slidesToScroll: 1,
      adaptiveHeight: true,
      arrows: false,
      responsive: [
        { 
          breakpoint: 400, 
          settings: { 
            slidesToShow: 1.5,
            slidesToScroll: 1 
          } 
        }
      ]
    });
    
    $mobileCarousel.on('init afterChange', function(event, slick) {
      var currentSlidesToShow = slick.options.slidesToShow;
      var totalSlides = Math.ceil({{ product_count }} / currentSlidesToShow);
      var currentSlideGroup = Math.floor(slick.currentSlide / currentSlidesToShow) + 1;
      
      $('.carousel-arrows-mobile-{{ section.id }} .current-slide-mobile').text(currentSlideGroup);
      $('.carousel-arrows-mobile-{{ section.id }} .total-slides-mobile').text(totalSlides);
      $('.carousel-arrows-mobile-{{ section.id }} .progress-fill-mobile').css('width', (currentSlideGroup / totalSlides) * 100 + '%');
      
      // Update mobile arrow states
      $('.carousel-arrows-mobile-{{ section.id }} .arrow-left-mobile').toggleClass('disabled', slick.currentSlide === 0);
      $('.carousel-arrows-mobile-{{ section.id }} .arrow-right-mobile').toggleClass('disabled', slick.currentSlide >= {{ product_count }} - Math.ceil(currentSlidesToShow));
    });
    
    $('.carousel-arrows-mobile-{{ section.id }} .arrow-left-mobile').off('click').on('click', function(e) {
      e.preventDefault();
      if (!$(this).hasClass('disabled')) {
        $mobileCarousel.slick('slickPrev');
      }
    });
    
    $('.carousel-arrows-mobile-{{ section.id }} .arrow-right-mobile').off('click').on('click', function(e) {
      e.preventDefault();
      if (!$(this).hasClass('disabled')) {
        $mobileCarousel.slick('slickNext');
      }
    });
    
    // Trigger initial update for mobile slider
    $mobileCarousel.on('init', function(event, slick) {
      var currentSlidesToShow = slick.options.slidesToShow;
      var totalSlides = Math.ceil({{ product_count }} / currentSlidesToShow);
      $('.carousel-arrows-mobile-{{ section.id }} .total-slides-mobile').text(totalSlides);
      $('.carousel-arrows-mobile-{{ section.id }} .current-slide-mobile').text(1);
      $('.carousel-arrows-mobile-{{ section.id }} .progress-fill-mobile').css('width', (1 / totalSlides) * 100 + '%');
      $('.carousel-arrows-mobile-{{ section.id }} .arrow-left-mobile').addClass('disabled');
      $('.carousel-arrows-mobile-{{ section.id }} .arrow-right-mobile').toggleClass('disabled', {{ product_count }} <= Math.ceil(currentSlidesToShow));
    });
    
    $mobileCarousel.slick('slickGoTo', 0);
  {% endif %}
});
</script>