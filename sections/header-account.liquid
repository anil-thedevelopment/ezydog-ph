<style>
  :root {
    --header-is-sticky: {% if section.settings.enable_sticky %}1{% else %}0{% endif %};
  }
  {%- if section.settings.enable_sticky -%}
    #shopify-section-{{ section.id }} {
      position: sticky;
      top: 0;
    }

    .shopify-section--announcement-bar ~ #shopify-section-{{ section.id }} {
      top: calc(var(--announcement-bar-is-sticky, 0) * var(--announcement-bar-height, 0px));
    }
  {%- endif -%}
  .site-header__logo img {
    max-width: {{ shop.brand.logo_max_width | default: '450' | remove: 'px' | append: 'px' | escape }};
  }
  {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  #powrIframeLoader {
    display: none;
  }
  #NavDrawer ul.drawer__nav li.drawer__nav-item a {
    font-size: 12px;
  }
  /* Header Styles */
  .site-header {
    background-color: #ee1c25;
    padding: 10px 0;
    border-bottom: 1px solid #ee1c25;
  }
  
  .site-header__upper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    /* padding: 0 20px; */
  }
  .medium-up--hide {
    display: none;
  }
  a {
    color: #e52020;
  }
  #sidebar-menu a {
    color: #000;
  }
  .site-header__logo {
    /* Style the logo or shop name */
    font-size: 1.5rem; 
    font-weight: bold;
  }
  
  .site-header__shop-name--small {
    text-decoration: none;
    color: #333; 
  }
  
  /* Navigation Styles */
  .site-nav {
    display: flex;
    list-style: none;
  }
  
  .site-nav__item {
    margin-right: 20px;
  }
  
  .site-nav__link {
    text-decoration: none;
    color: #666;
    padding: 5px 10px;
    border-radius: 5px;
    transition: color 0.3s ease;
  }
  
  .site-nav__link:hover {
    color: #333;
  }
  
  
  /* User Menu Dropdown */
  .site-header__user-menu {
    position: relative;
  }
  
  .dropdown-toggle {
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 600;
    color: #333;
  }
  
  .dropdown-toggle:after {
    content: none;
  }
  
  .dropdown-menu {
      position: absolute;
      top: 100%;
      right: 0;
      background-color: #f0eff0;
      border: 1px solid #ccc;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
      padding: 10px;
      z-index: 1000;
      min-width: 160px;
      border-radius: 5px;
      text-align: right;
      text-transform: uppercase;
  }
  
  .dropdown-menu.dropdown-menu-right a {
      font-size: 14px;
      font-weight: 600;
  }
  
  .dropdown-item {
    display: block;
    padding: 5px 10px;
    color: #333;
    text-decoration: none;
    transition: background-color 0.2s ease;
    border-radius: 3px;
  }
  
  .dropdown-item:hover {
    background-color: #f0f0f0;
  }
  .dropdown-menu {
    display: block !important;
  }
  .dropdown-menu.hide {
    display: none !important;
  }
  /* Responsive Styles (Example for smaller screens) */
  @media only screen and (max-width: 768px) {
    .site-nav {
        display: none;
    }
    .medium-up--hide {
      display: block;
    }
    /* Show the mobile menu button (if you have one) */
    .site-header__menu-toggle--open {
        display: block;
    }
  
    .site-header__upper {
      /* flex-direction: column;
      align-items: flex-start; */
      display: flex;
    }
  
    .site-header__logo {
        margin-bottom: 10px;
    }

    svg.icon.icon-hamburger {
      color: rgb(128 130 133);
    }
    input.drawer__search-input {
      margin-bottom: 0px;
    }
  }
  .customer-profile p {
    text-transform: none;
  }
  
  .customer-profile {
    border-bottom: 1px solid #333;
  }

  @media only screen and (max-width: 767px) {
    .small--one-quarter {
      width: 33%; /*18%;*/ 
    }
    .medium-up--two-thirds-header {
        width: 42% !important;
    }
    .grid.grid--table {
      display: flex;
